<?xml version="1.0" encoding="UTF-8"?>

<rate-limiting xmlns="http://docs.rackspacecloud.com/power-api/rate-limiting/v1.0">
    <request-endpoint uri-regex="/service/limits/?" />

    <limit-group id="customer-limits" roles="customer" default="true">
        <limit uri="/service/*" uri-regex="/service/([^/]*).*" http-methods="GET" unit="MINUTE" value="3" />
    </limit-group>

    <limit-group id="testing-limits" roles="test">
        <limit uri="/service/*" uri-regex="/service/([^/]*).*" http-methods="GET" unit="MINUTE" value="3" />
    </limit-group>
</rate-limiting>

