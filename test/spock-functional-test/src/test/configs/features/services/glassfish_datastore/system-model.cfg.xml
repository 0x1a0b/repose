<?xml version="1.0" encoding="UTF-8"?>
<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
    <repose-cluster id="repose">

        <nodes>
            <node id="nodea" hostname="localhost" http-port="${glassfish_repose_port_1}"/>
            <node id="nodeb" hostname="localhost" http-port="${glassfish_repose_port_2}"/>
        </nodes>

        <filters>
            <filter name="rate-limiting" />
        </filters>

        <services>
            <service name="dist-datastore"/>
        </services>

        <destinations>
            <endpoint id="openrepose" protocol="http" hostname="${target_hostname}" root-path="/" port="${target_port}"
                      default="true"/>
        </destinations>

    </repose-cluster>

</system-model>

