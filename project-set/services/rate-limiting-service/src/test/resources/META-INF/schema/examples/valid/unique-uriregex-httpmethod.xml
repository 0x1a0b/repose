<?xml version="1.0" encoding="UTF-8"?>

<rate-limiting xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0 ../../../../../../main/resources/META-INF/schema/config/rate-limiting-configuration.xsd"
 xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">

    <limit-group id="customer-limits" groups="customer foo" default="true">
        <limit uri="/servers/*" uri-regex="\/servers\/1.*" http-methods="POST PUT" unit="DAY" value="10"/>
        <limit uri="/servers/*" uri-regex="\/servers\/2.*" http-methods="POST PUT" unit="HOUR" value="5" />
    </limit-group>


</rate-limiting>
