<?xml version="1.0" encoding="UTF-8"?>

<xsd-validator xmlns='http://openrepose.org/repose/xsd-validator/v1.0'>
    <validators>
        <validator 
            uri-regex="/some/path/?.*" 
            wadl="file://my/wadl/file.wadl" 
            check-well-formed="false" 
            check-xsd-grammer="true" 
            check-elements="true" 
            use-saxon="false"/>
        <validator uri-regex="/some/other/path/?.*" wadl="file://a/different/wadl/file.wadl"/>
    </validators>
</xsd-validator>
