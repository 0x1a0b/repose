<?xml version="1.0" encoding="UTF-8"?>

<xs:schema elementFormDefault="qualified" attributeFormDefault="unqualified"
           targetNamespace="http://docs.api.rackspacecloud.com/repose/uri-translation/v1.0"
           xmlns:uri-stripper="http://docs.api.rackspacecloud.com/repose/uri-translation/v1.0"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- Client IP Identity Configuration -->
    <xs:element name="uri-stripper" type="uri-stripper:UriStripperConfig"/>

    <xs:complexType name="UriStripperConfig">

        <xs:annotation>
            <xs:documentation>
                <html:p>Document here</html:p>
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="rewriteLocation" type="xs:boolean" use="required"/>

        <xs:attribute name="position" type="uri-stripper:nonNegativeInt" use="required"/>

    </xs:complexType>

    <xs:simpleType name="nonNegativeInt">
        <xs:restriction base="xs:int">
            <xs:minInclusive value="0"/>
        </xs:restriction>
    </xs:simpleType>


</xs:schema>
