<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletAdapter</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.ErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResponseSizeServlet</servlet-name>
        <servlet-class>com.rackspace.papi.mocks.ResponseSizeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAdapter</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/ErrorServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResponseSizeServlet</servlet-name>
        <url-pattern>/ResponseSizeServlet/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
