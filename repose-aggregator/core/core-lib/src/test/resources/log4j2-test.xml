<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%-4r [%t] %-5p %c %x - %m%n"/>
        </Console>
        <List name="List"/>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="List"/>
        </Root>
        <Logger name="log4j.logger.org.apache.commons.httpclient" level="warn"/>
        <Logger name="log4j.logger.org.apache.commons.httpclient.auth" level="warn"/>
    </Loggers>
</Configuration>
