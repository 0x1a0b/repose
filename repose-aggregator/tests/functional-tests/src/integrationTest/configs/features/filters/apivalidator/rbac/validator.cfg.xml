<?xml version="1.0" encoding="UTF-8"?>

<validators xmlns="http://docs.openrepose.org/repose/validator/v1.0"
            multi-role-match="true">
    <validator role="cwaas:observer" default="true">
        <application xmlns="http://wadl.dev.java.net/2009/02"
                >
            <resources>
                <resource path="/"
                          type="caps.wadl#listAttachments
                                caps.wadl#listGizmoDetails
                                caps.wadl#listGizmos
                                caps.wadl#listWidgetDetails
                                caps.wadl#listWidgets
                                caps.wadl#showAttachment"/>
            </resources>
        </application>
    </validator>
    <validator role="cwaas:creator">
        <application xmlns="http://wadl.dev.java.net/2009/02"
                >
            <resources>
                <resource path="/"
                          type="caps.wadl#attachGizmo
                                caps.wadl#createGizmo
                                caps.wadl#createWidget
                                caps.wadl#listAttachments
                                caps.wadl#listGizmoDetails
                                caps.wadl#listGizmos
                                caps.wadl#listWidgetDetails
                                caps.wadl#listWidgets
                                caps.wadl#showAttachment
                                caps.wadl#updateGizmo
                                caps.wadl#updateWidget"/>
            </resources>
        </application>
    </validator>
    <validator role="cwaas:admin">
        <application xmlns="http://wadl.dev.java.net/2009/02"
                >
            <resources>
                <resource path="/"
                          type="caps.wadl#attachGizmo
                                caps.wadl#createGizmo
                                caps.wadl#createWidget
                                caps.wadl#deleteGizmo
                                caps.wadl#deleteWidget
                                caps.wadl#detachGizmo
                                caps.wadl#listAttachments
                                caps.wadl#listGizmoDetails
                                caps.wadl#listGizmos
                                caps.wadl#listWidgetDetails
                                caps.wadl#listWidgets
                                caps.wadl#showAttachment
                                caps.wadl#updateGizmo
                                caps.wadl#updateWidget"/>
            </resources>
        </application>
    </validator>
</validators>
