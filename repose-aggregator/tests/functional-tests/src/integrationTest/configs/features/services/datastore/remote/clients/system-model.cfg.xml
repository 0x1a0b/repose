<?xml version="1.0" encoding="UTF-8"?>
<system-model xmlns="http://docs.openrepose.org/repose/system-model/v2.0">
    <repose-cluster id="repose">
        <nodes>
            <node id="client1" hostname="localhost" http-port="${reposePort}"/>
            <node id="client2" hostname="localhost" http-port="${reposePort2}"/>
        </nodes>
        <filters>
            <filter name="rate-limiting"/>
        </filters>
        <services>
            <service name="remote-datastore"/>
        </services>
        <destinations>
            <endpoint id="openrepose" protocol="http" hostname="localhost" root-path="/" port="${targetPort}" default="true"/>
        </destinations>
    </repose-cluster>
</system-model>
