<?xml version="1.0" encoding="UTF-8"?>
<http-connection-pools xmlns="http://docs.openrepose.org/repose/http-connection-pool/v1.0">
    <pool id="default" default="true">
        <headers>
            <header name="X-Pool-Id" value="default-pool"/>
        </headers>
    </pool>
    <pool id="atom-feed-pool-unauth">
        <headers>
            <header name="X-Pool-Id" value="atom-feed-pool-unauth"/>
        </headers>
    </pool>
    <pool id="atom-feed-pool-auth">
        <headers>
            <header name="X-Pool-Id" value="atom-feed-pool-auth"/>
        </headers>
    </pool>
    <pool id="small-timeout-pool" http.socket.timeout="1000">
        <headers>
            <header name="X-Pool-Id" value="small-timeout-pool"/>
        </headers>
    </pool>
</http-connection-pools>