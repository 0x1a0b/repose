<?xml version="1.1" encoding="UTF-8"?>
<atom-feed-service xmlns="http://docs.openrepose.org/repose/atom-feed-service/v1.0"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <feed id="unauth-feed-no-pool" uri="http://localhost:${atomPort}/feed"/>

    <feed id="auth-feed-no-pool" uri="http://localhost:${atomPort2}/feed">
        <authentication xsi:type="OpenStackIdentityV2AuthenticationType"
                        uri="http://localhost:${identityPort}"
                        username="admin_username"
                        password="admin_password"/>
    </feed>

    <feed id="unauth-feed-pool" uri="http://localhost:${atomPort}/feed" connection-pool-id="atom-feed-pool-unauth"/>

    <feed id="auth-feed-pool" uri="http://localhost:${atomPort2}/feed" connection-pool-id="atom-feed-pool-auth">
        <authentication xsi:type="OpenStackIdentityV2AuthenticationType"
                        uri="http://localhost:${identityPort}"
                        username="admin_username"
                        password="admin_password"/>
    </feed>

    <feed id="unauth-feed-missing-pool" uri="http://localhost:${atomPort}/feed" connection-pool-id="missing-pool-unauth"/>

    <feed id="auth-feed-missing-pool" uri="http://localhost:${atomPort2}/feed" connection-pool-id="missing-pool-auth">
        <authentication xsi:type="OpenStackIdentityV2AuthenticationType"
                        uri="http://localhost:${identityPort}"
                        username="admin_username"
                        password="admin_password"/>
    </feed>

    <feed id="unauth-feed-timeout-pool" uri="http://localhost:${atomPort}/feed" connection-pool-id="small-timeout-pool"/>

    <feed id="auth-feed-timeout-pool" uri="http://localhost:${atomPort2}/feed" connection-pool-id="small-timeout-pool">
        <authentication xsi:type="OpenStackIdentityV2AuthenticationType"
                        uri="http://localhost:${identityPort}"
                        username="admin_username"
                        password="admin_password"/>
    </feed>

    <!-- This feed will be used to test authentication taking too long and timing out -->
    <feed id="auth-feed-auth-timeout" uri="http://localhost:${atomPort2}/feed">
        <authentication xsi:type="OpenStackIdentityV2AuthenticationType"
                        timeout="2000"
                        uri="http://localhost:${identityPort}"
                        username="admin_username"
                        password="admin_password"/>
    </feed>
</atom-feed-service>