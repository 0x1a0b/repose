<?xml version="1.0" encoding="UTF-8"?>
<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">
    <repose-cluster id="repose" rewrite-host-header="false">

        <nodes>
            <node id="node1" hostname="localhost" http-port="${reposePort}"/>
        </nodes>

        <filters>
            <filter name="dist-datastore"/>
        </filters>

        <destinations>
            <endpoint id="openrepose" protocol="http" hostname="localhost" root-path="/" port="${targetPort}"
                      default="true"/>
        </destinations>

    </repose-cluster>

</system-model>
