<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns="http://docs.openrepose.org/repose/scripting/v1.0"
           targetNamespace="http://docs.openrepose.org/repose/scripting/v1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

    <!-- Elements -->
    <xs:element name="scripting" type="ScriptingConfig"/>

    <!-- Types -->
    <xs:complexType name="ScriptingConfig">
        <xs:annotation>
            <xs:documentation>
                <html:p>The root config type.</html:p>
            </xs:documentation>
        </xs:annotation>

        <xs:sequence>
            <xs:element name="request-script" type="ScriptData" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="response-script" type="ScriptData" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ScriptData">
        <xs:annotation>
            <xs:documentation>
                <html:p>The script to be run.</html:p>
            </xs:documentation>
        </xs:annotation>

        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="language" type="xs:string" use="required"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
</xs:schema>
