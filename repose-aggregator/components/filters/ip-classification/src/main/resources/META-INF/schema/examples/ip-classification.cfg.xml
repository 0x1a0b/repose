<ip-classification xmlns="http://docs.openrepose.org/repose/ip-classification/v1.0">
    <!--
     specify what header to put the group name in. This is the default. It will always add an additional header, not
     clobbering the existing value.
    -->
    <group-header-name quality="0.4"/>

    <!-- then create 0..n classifications. They are ordered, so the first match wins.
    A default catch all is not supplied. If you want to have it always label, define one.
    -->
    <classifications>
        <!-- Classifications follow the CIDR rules: https://en.wikipedia.org/wiki/Classless_Inter-Domain_Routing
        You can specify ipv4-cidr and/or ipv6-cidr. If either matches, the label is applied to the specified header
        and matching stops. If neither matches, nothing happens.
        labels must be unique.
        You may specify multiple cidr notations space separated in either IPv4 or IPv6.
        -->
        <classification label="sample-group">
            <cidr-ip>192.168.1.0/24</cidr-ip>
            <cidr-ip>192.168.0.1/32</cidr-ip>
        </classification>
        <classification label="sample-ipv6-group">
            <cidr-ip>2001:db8::/48</cidr-ip>
        </classification>
        <classification label="bolth-group">
            <cidr-ip>10.10.220.0/24</cidr-ip>
            <cidr-ip>2001:1938:80:bc::1/64</cidr-ip>
        </classification>
        <classification label="ipv4-match-all">
            <cidr-ip>0.0.0.0/0</cidr-ip>
        </classification>
    </classifications>
</ip-classification>
