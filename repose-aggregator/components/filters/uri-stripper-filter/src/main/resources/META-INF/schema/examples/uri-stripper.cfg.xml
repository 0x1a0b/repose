<?xml version="1.0" encoding="UTF-8"?>

<uri-stripper xmlns="http://docs.openrepose.org/repose/uri-stripper/v1.0" rewrite-location="true" token-index="1">
    <link-resources>
        <resource uri-path-regex=".*" http-methods="ALL">
            <link-paths>
                <json>$.service.link</json>
                <json token-index="1">$.other-service.link</json>
            </link-paths>
        </resource>
    </link-resources>
</uri-stripper>
