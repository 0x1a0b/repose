    <groupId>com.rackspace.papi.components</groupId>
    <artifactId>echo</artifactId>

    <name>Repose Components - Testing Echo Filter</name>
    <description>The echo filter is a simple filter that responds to an HTTP Request with a 200 status,
        and echos back the same headers that were passed through. The filter loops through
        all the headers and adds them onto the HTTP Response. </description>

    <packaging>jar</packaging>

    <properties>
        <sonar.jacoco.itReportPath>${project.basedir}/../../../target/jacoco-it.exec</sonar.jacoco.itReportPath>
    </properties>

    <dependencies>
