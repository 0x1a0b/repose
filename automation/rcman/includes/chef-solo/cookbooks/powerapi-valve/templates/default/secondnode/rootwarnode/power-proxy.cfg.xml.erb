<power-proxy xmlns="http://docs.rackspacecloud.com/power-api/system-model/v2.0">
  <service-domain id="repose">

    <service-domain-nodes>
      <node id="proxy-n01" hostname="<%= node[:fqdn]%>" http-port="8080"/>
    </service-domain-nodes>

    <filters>
        <filter name="destination-router" />
    </filters>

    <destinations>
      <target-domain id="mocks" protocol="http" root-path="/mocks" port="8080" default="true"/>
    </destinations>

  </service-domain>

  <service-domain id="mocks">

    <service-domain-nodes>
      <node id="endpoint1" protocol="http" hostname="<%= node[:fqdn]%>" http-port="8080"/>
      <node id="endpoint2" protocol="http" hostname="50.57.189.15" http-port="8080"/>
    </service-domain-nodes>
  </service-domain>
</power-proxy>

