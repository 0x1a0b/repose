<power-proxy xmlns="http://docs.rackspacecloud.com/power-api/system-model/v2.0">
  <service-domain id="repose">

    <service-domain-nodes>
      <node id="proxy-n01" hostname="<%= node[:fqdn]%>" http-port="8080"/>
    </service-domain-nodes>

    <filters>
        <filter name="destination-router" />
    </filters>

    <destinations>
      <endpoint id="mocks" protocol="http" root-path="/mocks" port="8080"/>
    </destinations>

  </service-domain>
</power-proxy>
